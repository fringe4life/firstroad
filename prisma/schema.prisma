generator client {
  provider        = "prisma-client"
  previewFeatures = ["relationJoins"]
  engineType      = "client"
  output          = "../src/generated/prisma"
  runtime         = "bun"
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../src/generated/prismabox"
}

datasource db {
  provider = "postgresql"
}
