model User {
  id            String  @id @default(cuid())
  name          String?
  email         String  @unique
  emailVerified Boolean
  image         String?

  // Relations
  accounts Account[]
  sessions Session[]
  userInfo UserInfo? // One-to-one relationship with UserInfo

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
