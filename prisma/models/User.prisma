model User {
  id            String  @id @default(cuid())
  name          String?
  email         String  @unique
  emailVerified Boolean
  image         String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts    Account[]
  sessions    Session[]
  userInfo    UserInfo? // One-to-one relationship with UserInfo
  member      Member?
  invitations Invitation[]
}
