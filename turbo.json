{
  "$schema": "https://turborepo.dev/schema.v2.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "BETTER_AUTH_SECRET",
        "RESEND_API_KEY",
        "RESEND_FROM",
        "NEXT_PUBLIC_RESEND_FROM",
        "NEXT_PUBLIC_APP_URL",
        "INNGEST_SIGNING_KEY",
        "INNGEST_EVENT_KEY",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "S3_REGION",
        "S3_BUCKET"
      ]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "postinstall": {
      "cache": false
    },
    "db:generate": { "cache": false },
    "db:migrate": { "cache": false, "persistent": true },
    "db:deploy": { "cache": false },
    "clear:non-auth": { "cache": false },
    "clear:attachments": {
      "cache": false
    },
    "seed:members": { "cache": false },
    "type": { "outputs": [] },
    "typegen": { "outputs": [] }
  }
}
