    "seed:members": "bun run prisma/scripts/seed-org-members.ts",
    "dev:email": "email dev --dir ./emails --port 3001",
    "build:email": "email build --dir ./emails",
    "export:email": "email export --dir ./emails",
    "prepare": "husky",
    "inngest": "bun x inngest-cli dev -u http://localhost:3000/api/inngest",
    "deploy": "vercel deploy --prod",
    "deploy:prod": "vercel build && vercel deploy --prebuilt --archive=tgz",
    "doctor": "ultracite doctor",
    "ultracite:upgrade": "bun x ultracite@latest init --pm bun --linter biome --agents cursor-cli --editors vscode --hooks cursor --frameworks next --quiet",
