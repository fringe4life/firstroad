{
  "name": "firstroad",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --webpack",
    "dev:inspect": "bun --bun run next dev --inspect --webpack",
    "next:upgrade": "next upgrade",
    "next:analyze": "next analyze",
    "build": "bun --bun run next build --webpack",
    "build:debug": "bun --bun run next build --debug --webpack",
    "build:debug:prerender": "bun --bun run next build --debug-prerender --webpack",
    "start": "bun --bun run next start",
