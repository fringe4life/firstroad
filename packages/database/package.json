{
  "name": "@firstroad/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "type": "tsc --noEmit --project tsconfig.json",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --skip-generate",
    "db:deploy": "prisma migrate deploy",
    "clear:attachments": "bun --bun --env-file .env prisma/scripts/clear-attachments.ts",
    "clear:non-auth": "bun prisma/scripts/clear-non-auth-tables.ts",
    "seed:members": "bun prisma/scripts/seed-org-members.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^7.3.0",
    "@prisma/client": "^7.3.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "elysia": "1.4.21",
    "prisma": "^7.3.0",
    "prismabox": "^1.1.26"
  },
  "exports": {
    ".": "./src/index.ts",
    "./client-types": "./src/client-types.ts"
  }
}
