{
  "version": 1,
  "ultracite": {
    "rules": [
      {
        "path": ".cursor/rules/ultracite.mdc",
        "globs": "**/*.{ts,tsx,js,jsx,json,jsonc,html,vue,svelte,astro,css,yaml,yml,graphql,gql,md,mdx,grit}",
        "alwaysApply": false
      }
    ],
    "tasks": {
      "check": "bun check",
      "fix": "bun fix",
      "doctor": "bun doctor"
    }
  },
  "hooks": {
    "afterFileEdit": [{ "command": "bun fix" }]
  }
}
